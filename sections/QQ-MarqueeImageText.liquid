        "type": "range",
        "id": "marquee_speed",
        "min": 1,
        "max": 50,
        "step": 1,
        "label": "Speed",
        "default": 10,
        "info": "The higher the number, the slower the speed"
      },
      {
        "type": "range",
        "id": "marquee_gap",
