{% comment %} Section specific CSS {% endcomment %}
{% style %}
  #shopify-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }
  
  #shopify-section-{{ section.id }} .container {
    {% if section.settings.is_full_width %}
      width: 100%;
      max-width: 100%;
      padding: 0 {{ section.settings.full_width_padding }}px;
    {% else %}
      max-width: {{ section.settings.section_width }}px;
      margin: 0 auto;
      padding: 0 20px;
    {% endif %}
  }

  /* Main title styling */
  #shopify-section-{{ section.id }} .feature-boxes__main-title {
    font-size: {{ section.settings.title_size }}px;
    color: {{ section.settings.title_color }};
    font-weight: {{ section.settings.title_weight }};
    margin-bottom: 10px;
    text-align: center;
    width: 100%;
    max-width: {% if section.settings.is_full_width %}100%{% else %}{{ section.settings.section_width }}px{% endif %};
    margin-left: auto;
    margin-right: auto;
  }

  /* Subtitle styling */
  #shopify-section-{{ section.id }} .feature-boxes__subtitle {
    font-size: {{ section.settings.subtitle_size }}px;
    color: {{ section.settings.subtitle_color }};
    font-weight: {{ section.settings.subtitle_weight }};
    margin-bottom: 15px;
    text-align: center;
    width: 100%;
    max-width: {% if section.settings.is_full_width %}100%{% else %}{{ section.settings.section_width }}px{% endif %};
    margin-left: auto;
    margin-right: auto;
  }

  /* Description styling */
  #shopify-section-{{ section.id }} .feature-boxes__description {
    font-size: {{ section.settings.description_size }}px;
    color: {{ section.settings.description_color }};
    max-width: {% if section.settings.is_full_width %}100%{% else %}800px{% endif %};
    margin: 0 auto 30px;
    text-align: center;
    width: 100%;
  }

  /* Feature box styling */
  #shopify-section-{{ section.id }} .feature-box {
    border: {{ section.settings.box_border_thickness }}px solid {{ section.settings.box_border_color }};
    border-radius: {{ section.settings.box_border_radius }}px;
    padding: 20px;
    height: 100%;
    background-color: {{ section.settings.box_background_color }};
    transition: transform 0.3s ease;
  }

  #shopify-section-{{ section.id }} .feature-box:hover {
    transform: translateY(-5px);
  }

  /* Feature box title styling */
  #shopify-section-{{ section.id }} .feature-box__title {
    font-size: {{ section.settings.box_title_size }}px;
    color: {{ section.settings.box_title_color }};
    font-weight: {{ section.settings.box_title_weight }};
    margin-bottom: 10px;
  }

  /* Feature box subtitle styling */
  #shopify-section-{{ section.id }} .feature-box__subtitle {
    font-size: {{ section.settings.box_subtitle_size }}px;
    color: {{ section.settings.box_subtitle_color }};
  }

  /* Bottom statement styling */
  #shopify-section-{{ section.id }} .feature-boxes__bottom-statement {
    font-size: {{ section.settings.bottom_statement_size }}px;
    color: {{ section.settings.bottom_statement_color }};
    font-weight: {{ section.settings.bottom_statement_weight }};
    margin-bottom: 20px;
  }

  /* Button styling */
  #shopify-section-{{ section.id }} .feature-boxes__button {
    background-color: {{ section.settings.button_background }};
    color: {{ section.settings.button_text_color }};
    border-radius: {{ section.settings.button_radius }}px;
    padding: 10px 30px;
    display: inline-block;
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  #shopify-section-{{ section.id }} .feature-boxes__button:hover {
    opacity: 0.9;
  }

  @media only screen and (max-width: 798px) {
    #shopify-section-{{ section.id }} .container {
      {% if section.settings.is_full_width %}
        padding: 0 {{ section.settings.full_width_padding | divided_by: 2 }}px;
      {% else %}
        padding: 0 15px;
      {% endif %}
    }
    
    #shopify-section-{{ section.id }} .feature-boxes__grid {
      grid-template-columns: 1fr;
    }

    #shopify-section-{{ section.id }} .feature-boxes__main-title {
      font-size: {{ section.settings.mobile_title_size }}px;
    }

    #shopify-section-{{ section.id }} .feature-boxes__subtitle {
      font-size: {{ section.settings.mobile_subtitle_size }}px;
    }

    #shopify-section-{{ section.id }} .feature-boxes__description {
      font-size: {{ section.settings.mobile_description_size }}px;
    }

    #shopify-section-{{ section.id }} .feature-box__title {
      font-size: {{ section.settings.mobile_box_title_size }}px;
    }

    #shopify-section-{{ section.id }} .feature-box__subtitle {
      font-size: {{ section.settings.mobile_box_subtitle_size }}px;
    }

    #shopify-section-{{ section.id }} .feature-boxes__bottom-statement {
      font-size: {{ section.settings.mobile_bottom_statement_size }}px;
    }
  }

  {% render 'css-loop',
          css: section.settings.custom_css,
          id: section.id
  %}
{% endstyle %}

{% comment %} HTML markup {% endcomment %}
<section class="section feature-boxes-section {{ section.settings.css_class }}"
         {% if section.settings.animation != "none" %}
           data-scroll-class="{{ section.settings.animation }}"
         {% endif %}>
  <div class="container">
    <!-- Title Section -->
    <div class="feature-boxes__header">
      {% if section.settings.title != blank %}
        <h2 class="feature-boxes__main-title">{{ section.settings.title }}</h2>
      {% endif %}
      
      {% if section.settings.subtitle != blank %}
        <h3 class="feature-boxes__subtitle">{{ section.settings.subtitle }}</h3>
      {% endif %}
      
      {% if section.settings.description != blank %}
        <div class="feature-boxes__description">{{ section.settings.description }}</div>
      {% endif %}
    </div>

    <!-- Content Section -->
    <div class="feature-boxes__content-wrapper {% if section.settings.is_full_width %}is-full-width{% endif %}">
      <div class="feature-boxes__row">
        <!-- Left Image Column -->
        <div class="feature-boxes__image-column">
          {% if section.settings.product_image != blank %}
            {{ section.settings.product_image | image_url: width: 500 | image_tag: class: 'feature-boxes__image', alt: section.settings.title }}
          {% else %}
            <div class="feature-boxes__placeholder">
              <span>Add product image</span>
            </div>
          {% endif %}
        </div>

        <!-- Right Features Column -->
        <div class="feature-boxes__grid-column">
          <div class="feature-boxes__grid">
            {% for block in section.blocks %}
              {% if block.type == 'feature_box' %}
                <div class="feature-box" {{ block.shopify_attributes }}>
                  <h4 class="feature-box__title">{{ block.settings.title }}</h4>
                  <p class="feature-box__subtitle">{{ block.settings.subtitle }}</p>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom Section -->
    <div class="feature-boxes__footer text-center">
      {% if section.settings.bottom_statement != blank %}
        <p class="feature-boxes__bottom-statement">{{ section.settings.bottom_statement }}</p>
      {% endif %}
      
      {% if section.settings.button_text != blank %}
        <a href="{{ section.settings.button_link }}" class="feature-boxes__button">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

<style>
  .feature-boxes__header {
    margin-bottom: 40px;
    text-align: center;
    width: 100%;
  }

  .feature-boxes__content-wrapper {
    width: 100%;
  }
  
  .is-full-width {
    max-width: 100%;
    padding: 0;
  }
  
  .is-full-width .feature-boxes__row {
    justify-content: space-between;
  }
  
  .feature-boxes__row {
    display: flex;
    flex-wrap: wrap;
    margin-bottom: 40px;
    justify-content: center;
    width: 100%;
  }

  .feature-boxes__image-column {
    width: {% if section.settings.is_full_width %}48%{% else %}50%{% endif %};
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .feature-boxes__grid-column {
    width: {% if section.settings.is_full_width %}48%{% else %}50%{% endif %};
  }

  .feature-boxes__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
    height: 100%;
  }

  .feature-boxes__image {
    max-width: 100%;
    height: auto;
  }

  .feature-boxes__placeholder {
    background-color: #f0f0f0;
    width: 100%;
    height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #999;
  }

  .feature-boxes__footer {
    margin-top: 30px;
    text-align: center;
    width: 100%;
  }

  @media only screen and (max-width: 798px) {
    .feature-boxes__image-column,
    .feature-boxes__grid-column {
      width: 100%;
    }
    
    .feature-boxes__image-column {
      margin-bottom: 30px;
    }
  }
</style>

