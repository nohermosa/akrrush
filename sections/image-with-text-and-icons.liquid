{% comment %}
** Image with text and custom icon images **
{% endcomment %}

{%- liquid
  assign blocks = section.blocks
  assign mobile_text_position = section.settings.mobile_text_position
  assign image_block_count = 0
  assign text_block_count = 0
  assign first_image_block_found = false

  for block in blocks
    if block.type == 'image'
      assign image_block_count = image_block_count | plus: 1
    elsif block.type == 'text'
      assign text_block_count = text_block_count | plus: 1
    endif
  endfor
-%}


{% style %}
/**
 * Image with Text Section Styles
 * Controls layout, responsiveness, and icon display
 */

/* Base section styling */
#shopify-section-{{ section.id }} {
  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
  {% if section.settings.width == 'wide' %}
    width: 100%;
  {% endif %}
}

/* Image height control */
#shopify-section-{{ section.id }} .image-with-text__image-column .image-element__wrap {
  max-height: {{ section.settings.image_max_height }}px;
  overflow: visible;
  display: flex;
  align-items: center;
  justify-content: center;
}

#shopify-section-{{ section.id }} .image-with-text__image {
  object-fit: {{ section.settings.image_fit }};
  width: auto;
  max-width: 100%;
  max-height: {{ section.settings.image_max_height }}px;
}

/* Specific styles for contain mode */
#shopify-section-{{ section.id }} .image-with-text__image-column .image-element__wrap img[style*="object-fit: contain"] {
  width: auto !important;
  height: auto !important;
  max-height: {{ section.settings.image_max_height }}px !important;
  max-width: 100% !important;
}

/* Icon row layout */
.icon-row {
  display: flex;
  flex-wrap: wrap;
  justify-content: left;
  margin-top: 20px;
}

.icon-item {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin: 0;
  text-align: center;
  width: calc(25% - 20px);
}

.icon-container {
  width: {{ section.settings.icon_size }}px;
  height: 70px;
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  margin-bottom: 10px;
}

.icon-image {
  max-width: 100%;
  max-height: 100%;
  object-fit: contain;
}

.icon-text {
  font-size: 14px;
  color: #000000;
}

/* Responsive styles */
@media only screen and (max-width: 798px) {
  /* Section padding */
  #shopify-section-{{ section.id }} {
    padding-top: {{ section.settings.mobile_padding_top }}px;
    padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
  }
  
  /* Text and image columns */
  .image-with-text__text-column {
    padding: 15px 15px 0 15px;
  }
  
  .image-with-text__image-column {
    height: auto;
  }
  
  /* Mobile image height */
  #shopify-section-{{ section.id }} .image-with-text__image-column .image-element__wrap {
    max-height: {{ section.settings.mobile_image_max_height }}px;
  }
  
  #shopify-section-{{ section.id }} .image-with-text__image {
    max-height: {{ section.settings.mobile_image_max_height }}px;
  }
  
  /* Mobile icon adjustments */
  .icon-container {
    width: {{ section.settings.mobile_icon_size }}px;
    height: 100px;
  }
  
  .icon-text {
    font-size: 12px;
  }
  
  .icon-item {
    width: calc(50% - 20px);
  }
  
  .icon-container .image-element__wrap {
    width: 120px;
  }
}

/* Custom CSS from theme settings */
