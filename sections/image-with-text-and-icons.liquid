      {% for block in blocks %}

        {% if block.type != 'image' %}

          {%- liquid
            # Content settings
            assign title = block.settings.title
            assign heading_size = block.settings.heading_size
            assign text1 = block.settings.text1
            assign text = block.settings.text
            assign alignment = block.settings.alignment
            assign mobile_title = block.settings.mobile_title
            assign mobile_heading_size = block.settings.mobile_heading_size
            assign mobile_text = block.settings.mobile_text
            assign mobile_alignment = block.settings.mobile_alignment

            if mobile_heading_size == 'same_as_desktop'
              assign mobile_heading_size = heading_size
            endif

            if mobile_alignment == 'same_as_desktop'
              assign mobile_alignment = alignment
            endif

            # Is the color set to transparent?
            assign background_alpha = block.settings.background | color_extract: 'alpha'
            assign text_alpha = block.settings.text_color | color_extract: 'alpha'
            assign text1_alpha = block.settings.text1_color | color_extract: 'alpha'
          -%}

          {% comment %} Block specific CSS {% endcomment %}
          {%- capture block_css -%}
            #shopify-section-{{ section.id }} #shopify-section-{{ block.id }} .image-with-text__heading {
              color: {% if block.settings.heading_color != "rgba(0,0,0,0)" %}{{ block.settings.heading_color }} !important{% else %}{{ settings.heading_color }}{% endif %};
              {% if block.settings.heading_font_size %}font-size: {{ block.settings.heading_font_size }}px !important;{% endif %}
              {% if block.settings.heading_font_weight %}font-weight: {{ block.settings.heading_font_weight }} !important;{% endif %}
              line-height: 1.2;
            }
            
            @media only screen and (max-width: 798px) {
              #shopify-section-{{ section.id }} #shopify-section-{{ block.id }} .image-with-text__heading {
                {% if block.settings.mobile_heading_font_size %}font-size: {{ block.settings.mobile_heading_font_size }}px !important;{% endif %}
              }
            }

            #shopify-section-{{ section.id }} #shopify-section-{{ block.id }} .image-with-text__text {
              color: {%- if text_alpha != 0 -%}{{ block.settings.text_color }}{%- else -%}{{ settings.regular_color }}{%- endif -%};
            }

            #shopify-section-{{ section.id }} #shopify-section-{{ block.id }} .description-below {
              color: {%- if text1_alpha != 0 -%}{{ block.settings.text1_color }}{%- else -%}{{ settings.regular_color }}{%- endif -%};
            }

           
          {%- endcapture -%}

          {% style %}
            {{ block_css }}
            
            /* Additional direct style override */
            .section .image-with-text__heading {
              {% if block.settings.heading_font_size %}font-size: {{ block.settings.heading_font_size }}px !important;{% endif %}
              {% if block.settings.heading_font_weight %}font-weight: {{ block.settings.heading_font_weight }} !important;{% endif %}
              {% if block.settings.heading_color != "rgba(0,0,0,0)" %}color: {{ block.settings.heading_color }} !important;{% endif %}
            }
            
            /* Text1 color override */
            .section .description-below {
              {% if block.settings.text1_color != "rgba(0,0,0,0)" %}color: {{ block.settings.text1_color }} !important;{% endif %}
            
            }

            .section .description-below p {              
            font-size: 30px;
              line-height: 1.2;
            }

            .section h2.image-with-text__heading {
                padding-bottom: 0;                
            }

          @media only screen and (max-width: 798px) {
            .section .description-below p {              
            font-size: 25px;
              line-height: 1.2;
              padding-bottom: 20px;
            }

            .section h2.image-with-text__heading {
                padding-bottom: 20px;                
            }
          }
            
          {% endstyle %}

          <div
            class="
              image-with-text__text-column
              image-with-text__column
              image-with-text__alignment-{{ alignment }}
              image-with-text__mobile-alignment-{{ mobile_alignment }}
              {% render 'column-width', value: forloop.length %}
              medium-down--one-whole
              column
              has-padding-left
              has-padding-right
              {% if background_alpha != 0 %}has-background{% endif %}
              is-flex
              is-flex-wrap
              is-align-{{ block.settings.vertical_position }}
            "
            {% if mobile_text_position == 'top' or mobile_text_position == 'middle' and image_block_count == 2 %}
              style="--text-flex-order: -1;"
            {% endif %}
            {% if type != 'block' %}
              {{ block.shopify_attributes }} id="shopify-section-{{ block.id }}"
            {% endif %}
          >
            <div class="image-with-text__wrapper animate-on-scroll animate-left">
              {% if title != blank %}
                <h2
                  class="
                    image-with-text__heading
                    text-align-{{ alignment }}
                    is-{{ heading_size }}
                    is-hidden-mobile-only
                  "
                >
                  {{ title }}
                </h2>
              {% endif %}

              {%- if mobile_title != blank or title != blank -%}
                <h2
                  class="
                    image-with-text__heading
                    text-align-{{ mobile_alignment }}
                    is-{{ mobile_heading_size }}
                    is-hidden-desktop-only
                  "
                >
                  {%- if mobile_title != blank -%}
                    {{- mobile_title -}}
                  {%- else -%}
                    {{- title -}}
                  {%- endif -%}
                </h2>
              {%- endif -%}

              {% if text1 != blank %}
