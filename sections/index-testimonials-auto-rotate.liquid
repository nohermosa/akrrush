      "default": "#FFD700",
      "label": "Star color"
    },
    {
      "type": "select",
      "id": "stars_alignment",
      "label": "Stars alignment",
      "options": [
        {
          "value": "flex-start",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "flex-end",
          "label": "Right"
        }
