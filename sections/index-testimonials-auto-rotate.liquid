  "name": "Simple Testimonials",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Testimonials",
      "label": "Heading"
    },
    {
      "type": "range",
      "id": "heading_size",
