{{ 'section-testimonials.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  #section-{{ section.id }} .heading {
    margin-bottom: {{ section.settings.heading_spacing }}px;
    color: {{ section.settings.heading_color }};
    font-size: {{ section.settings.heading_size }}px;
  }
  
  #section-{{ section.id }} .testimonial-grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
    gap: 20px;
  }
  
  #section-{{ section.id }} .testimonial-item {
    height: 100%;
  }
  
  #section-{{ section.id }} .testimonial-stars {
    display: flex;
    justify-content: {{ section.settings.stars_alignment }};
    margin-bottom: 10px;
  }
  
  #section-{{ section.id }} .star-icon {
    fill: {{ section.settings.star_color }};
    width: 20px;
    height: 20px;
    margin-right: 2px;
  }
  
  @media screen and (max-width: 749px) {
    #section-{{ section.id }} .testimonial-grid {
      grid-template-columns: 1fr;
    }
    
    #section-{{ section.id }} .heading {
      margin-bottom: {{ section.settings.heading_spacing_mobile }}px;
    }
  }
  
  {% for block in section.blocks %}
    #testimonial-{{ block.id }} {
      background-color: {{ block.settings.background_color }};
      color: {{ block.settings.text_color }};
      border-radius: {{ block.settings.border_radius }}px;
      padding: {{ block.settings.padding }}px;
      text-align: {{ block.settings.text_alignment }};
      display: flex;
      flex-direction: column;
      justify-content: {{ block.settings.vertical_alignment }};
      height: 100%;
    }
    
    #testimonial-{{ block.id }} .testimonial-content {
      font-size: {{ block.settings.font_size }}px;
    }
    
    #testimonial-{{ block.id }} .testimonial-content p {
      color: {{ block.settings.text_color }};
    }
  {% endfor %}
{%- endstyle -%}

<div class="testimonial-section page-width section-{{ section.id }}-padding" id="section-{{ section.id }}">
  {%- if section.settings.heading != blank -%}
    <h2 class="heading text-center">{{ section.settings.heading }}</h2>
  {%- endif -%}
  
  <div class="testimonial-grid">
    {%- for block in section.blocks -%}
      <div class="testimonial-item" {{ block.shopify_attributes }}>
        <div id="testimonial-{{ block.id }}">
          <div class="testimonial-stars">
            {%- assign star_count = block.settings.star_count | plus: 0 -%}
            {%- for i in (1..star_count) -%}
              <svg class="star-icon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 17.27L18.18 21L16.54 13.97L22 9.24L14.81 8.63L12 2L9.19 8.63L2 9.24L7.46 13.97L5.82 21L12 17.27Z"/>
              </svg>
            {%- endfor -%}
          </div>
          <div class="testimonial-content">
            {{ block.settings.quote }}
          </div>
        </div>
      </div>
    {%- endfor -%}
  </div>
</div>

