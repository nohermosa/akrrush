  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "richtext",
          "id": "quote",
          "label": "Quote",
          "default": "<p>Share a testimonial from a happy customer.</p>"
        },
        {
          "type": "select",
          "id": "star_count",
          "label": "Number of stars",
          "options": [
            {
              "value": "4",
              "label": "4 stars"
            },
            {
              "value": "5",
              "label": "5 stars"
            }
          ],
          "default": "5"
        },
        {
          "type": "color",
          "id": "background_color",
          "label": "Background color",
          "default": "#017FB9"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text color",
          "default": "#FFFFFF"
        },
        {
          "type": "range",
          "id": "font_size",
          "label": "Font size (px)",
          "min": 12,
          "max": 36,
          "step": 1,
          "default": 16
        },
        {
          "type": "select",
          "id": "text_alignment",
          "label": "Text alignment",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "center"
        },
        {
          "type": "select",
          "id": "vertical_alignment",
          "label": "Vertical alignment",
          "options": [
            {
              "value": "flex-start",
              "label": "Top"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "flex-end",
              "label": "Bottom"
            }
          ],
          "default": "center"
        },
        {
          "type": "range",
          "id": "padding",
          "label": "Padding (px)",
          "min": 10,
          "max": 60,
          "step": 5,
          "default": 20
        },
        {
          "type": "range",
          "id": "border_radius",
          "label": "Border radius (px)",
          "min": 0,
          "max": 30,
          "step": 1,
          "default": 8
