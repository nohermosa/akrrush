{% liquid
  # Set selected variant - default to second variant if no URL variant and multiple variants exist
  assign selected_variant = product.selected_variant
  
  if product.variants.size == 1 or settings.select_first_available_variant
    assign selected_variant = product.selected_or_first_available_variant
  elsif product.variants.size > 1
    # If multiple variants and no specific variant in URL, use second variant
    unless request.query_string contains 'variant='
      assign selected_variant = product.variants[1]
    endunless
  endif

  for block in section.blocks
    if block.type == 'price'
      assign display_savings = block.settings.display_savings | json
    endif
    if block.type == 'complementary_products'
      assign product_recommendation_limit = block.settings.product_recommendation_limit
    endif
  endfor
%}

{% if product.variants.size > 1 and request.query_string == blank %}
<script>
// Define allVariants globally so all functions can access it
const allVariants = [
  {% for variant in product.variants %}
    {
      id: {{ variant.id }},
      title: {{ variant.title | json }},
      options: {{ variant.options | json }},
      metafields: {
        custom: {
          savings: {{ variant.metafields.custom.savings | json }}
        }
      }
    }{% unless forloop.last %},{% endunless %}
  {% endfor %}
];

function setSecondVariant() {
  const secondVariantId = '{{ product.variants[1].id }}';
  const secondVariantOptions = {{ product.variants[1].options | json }};
  const secondVariantSavings = '{{ product.variants[1].metafields.custom.savings | escape }}';
  
  // Update main variant selectors
  const variantSelects = document.querySelectorAll('[data-variants]');
  variantSelects.forEach(select => {
    if (select.value !== secondVariantId) {
      select.value = secondVariantId;
      select.dispatchEvent(new Event('change', { bubbles: true }));
      select.dispatchEvent(new Event('input', { bubbles: true }));
    }
  });
  
  // Update radio button inputs for variant options
  secondVariantOptions.forEach((optionValue, index) => {
    // Find the radio input for this option value
    const radioInput = document.querySelector(`input[data-variant-option-value][data-variant-option-value-index="${index}"][value="${optionValue}"]`);
    if (radioInput && !radioInput.checked) {
      // Check the radio button
      radioInput.checked = true;
      
      // Trigger change event
      radioInput.dispatchEvent(new Event('change', { bubbles: true }));
      radioInput.dispatchEvent(new Event('input', { bubbles: true }));
      
      // Update the parent swatch__options container
      const swatchOptions = radioInput.closest('[data-variant-option]');
      if (swatchOptions) {
        swatchOptions.setAttribute('data-variant-option-chosen-value', optionValue);
      }
      
      // Update the option name display with metafield
      const optionNameElement = document.querySelector(`[data-variant-option-name]`);
      if (optionNameElement && secondVariantSavings) {
        // Get the current text and add savings
        const currentText = optionNameElement.textContent || optionNameElement.innerText;
        const cleanText = currentText.replace(/ - .*$/, '');
        const newContent = cleanText + '<span class="variant-savings"> - ' + secondVariantSavings + '</span>';
        
        optionNameElement.innerHTML = newContent;
      }
    }
  });
  
  // Update variant-selection element
  const variantSelection = document.querySelector('[data-variant-selection]');
  if (variantSelection) {
    variantSelection.setAttribute('variant', secondVariantId);
  }
  
  // Update URL to reflect second variant selection
  const newUrl = new URL(window.location);
  newUrl.searchParams.set('variant', secondVariantId);
  history.replaceState(null, '', newUrl);
  
  
}

// Run multiple times to ensure it sticks
document.addEventListener('DOMContentLoaded', setSecondVariant);
window.addEventListener('load', function() {
  setSecondVariant();
  setTimeout(setSecondVariant, 100);
  setTimeout(setSecondVariant, 500);
  setTimeout(setSecondVariant, 1000);
  setTimeout(setSecondVariant, 2000);
  
  // Also run the metafield update after everything loads
  setTimeout(updateMetafieldDisplay, 100);
  setTimeout(updateMetafieldDisplay, 500);
  setTimeout(updateMetafieldDisplay, 1000);
  setTimeout(updateMetafieldDisplay, 2000);
  setTimeout(updateMetafieldDisplay, 3000);
});

// Override the theme's _updateLabels function to include metafields
function patchThemeUpdateLabels() {
  if (typeof customElements !== 'undefined' && customElements.get('options-selection')) {
    const optionsSelectionClass = customElements.get('options-selection');
    const originalUpdateLabels = optionsSelectionClass.prototype._updateLabels;
    
    optionsSelectionClass.prototype._updateLabels = function() {
      // Call the original function first
      if (originalUpdateLabels) {
        originalUpdateLabels.call(this);
      }
      
      // Then add our metafield logic
      const variantSelect = document.querySelector('[data-variants]');
      const currentVariantId = variantSelect ? variantSelect.value : null;
      const currentVariant = allVariants.find(v => v.id == currentVariantId);
      
      const optionNameElements = document.querySelectorAll('.options-selection__option-name');
      
      optionNameElements.forEach((element) => {
        let currentHTML = element.innerHTML;
        
        // Clean existing metafield content
        let cleanHTML = currentHTML;
        cleanHTML = cleanHTML.replace(/<span class="variant-savings">.*?<\/span>/g, '');
        cleanHTML = cleanHTML.replace(/ - \d+% savings per stick \+ Free Shipping/g, '');
        cleanHTML = cleanHTML.replace(/ - [^<]*savings[^<]*?(?=<|$)/gi, '');
        
        if (currentVariant && currentVariant.metafields && currentVariant.metafields.custom && currentVariant.metafields.custom.savings) {
          const newHTML = cleanHTML + '<span class="variant-savings"> - ' + currentVariant.metafields.custom.savings + '</span>';
          element.innerHTML = newHTML;
        } else {
          element.innerHTML = cleanHTML;
        }
      });
    };
    
    return true;
  } else {
    setTimeout(patchThemeUpdateLabels, 100);
    return false;
  }
}

// Fallback function for manual updates
function updateMetafieldDisplay() {
  const variantSelect = document.querySelector('[data-variants]');
  const currentVariantId = variantSelect ? variantSelect.value : null;
  const currentVariant = allVariants.find(v => v.id == currentVariantId);
  
  const optionNameElements = document.querySelectorAll('.options-selection__option-name');
  
  optionNameElements.forEach((element) => {
    let currentHTML = element.innerHTML;
    
    // Clean existing metafield content
    let cleanHTML = currentHTML;
    cleanHTML = cleanHTML.replace(/<span class="variant-savings">.*?<\/span>/g, '');
    cleanHTML = cleanHTML.replace(/ - \d+% savings per stick \+ Free Shipping/g, '');
    cleanHTML = cleanHTML.replace(/ - [^<]*savings[^<]*?(?=<|$)/gi, '');
    
    if (currentVariant && currentVariant.metafields && currentVariant.metafields.custom && currentVariant.metafields.custom.savings) {
      const newContent = cleanHTML + '<span class="variant-savings"> - ' + currentVariant.metafields.custom.savings + '</span>';
      element.innerHTML = newContent;
    } else {
      element.innerHTML = cleanHTML;
    }
  });
}

document.addEventListener('DOMContentLoaded', function() {
  // Patch the theme's update function - try multiple times
  patchThemeUpdateLabels();
  setTimeout(patchThemeUpdateLabels, 500);
  setTimeout(patchThemeUpdateLabels, 1000);
  setTimeout(patchThemeUpdateLabels, 2000);
  
  // Initial update - run multiple times to ensure it sticks
  setTimeout(updateMetafieldDisplay, 100);
  setTimeout(updateMetafieldDisplay, 300);
  setTimeout(updateMetafieldDisplay, 500);
  setTimeout(updateMetafieldDisplay, 1000);
  
  // Listen for radio button changes
  const variantInputs = document.querySelectorAll('input[data-variant-option-value]');
  
  variantInputs.forEach(input => {
    input.addEventListener('change', function() {
      // Run multiple times to override theme interference
      setTimeout(updateMetafieldDisplay, 50);
      setTimeout(updateMetafieldDisplay, 100);
      setTimeout(updateMetafieldDisplay, 200);
      setTimeout(updateMetafieldDisplay, 500);
      setTimeout(updateMetafieldDisplay, 1000);
    });
  });
  
  // Also listen for changes on the main variant selector
  const variantSelect = document.querySelector('[data-variants]');
  if (variantSelect) {
    variantSelect.addEventListener('change', function() {
      // Run multiple times to override theme interference
      setTimeout(updateMetafieldDisplay, 50);
      setTimeout(updateMetafieldDisplay, 100);
      setTimeout(updateMetafieldDisplay, 200);
      setTimeout(updateMetafieldDisplay, 500);
      setTimeout(updateMetafieldDisplay, 1000);
    });
  }
  
  // Listen for custom variant change events that the theme might dispatch
  document.addEventListener('variant-change', function() {
    setTimeout(updateMetafieldDisplay, 50);
    setTimeout(updateMetafieldDisplay, 100);
    setTimeout(updateMetafieldDisplay, 200);
    setTimeout(updateMetafieldDisplay, 500);
  });
  
  // Additional event listeners for theme-specific events
  document.addEventListener('variantChange', function() {
    setTimeout(updateMetafieldDisplay, 50);
    setTimeout(updateMetafieldDisplay, 200);
  });
});
</script>
