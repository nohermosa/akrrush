{% comment %} HTML structure for tabs with content left, image right layout {% endcomment %}
<section class="section {{ section.settings.css_class }}">
  <div class="container">
    <!-- Tabs Navigation -->
    <div class="tabs-container">
      <ul class="tabs-nav">
        {% for i in (1..3) %}
          {% assign tab_title = 'tab_title_' | append: i %}
          {% if section.settings[tab_title] != blank %}
            <li>
              <button class="tab-button {% if forloop.first %}active{% endif %}" data-tab="{{ i }}">
                {{ section.settings[tab_title] }}
              </button>
            </li>
          {% endif %}
        {% endfor %}
      </ul>
    </div>

    <!-- Tabs Content -->
    {% for i in (1..3) %}
      <div class="tab-content {% if forloop.first %}active{% endif %}" data-tab-content="{{ i }}">
        <div class="tab-row">
          <!-- Left Column (Text/Content) -->
          <div class="tab-column tab-text">
            {% for block in section.blocks %}
              {% assign tab_number = block.settings.tab_number | default: 1 | plus: 0 %}
              {% if tab_number == i and block.type == 'text' %}
                {%- liquid
                  assign title = block.settings.title
                  assign heading_size = block.settings.heading_size
                  assign text = block.settings.text
                  assign alignment = block.settings.alignment
                  assign mobile_title = block.settings.mobile_title
                  assign mobile_heading_size = block.settings.mobile_heading_size
                  assign mobile_text = block.settings.mobile_text
                  assign mobile_alignment = block.settings.mobile_alignment
                  
                  if mobile_heading_size == 'same_as_desktop'
                    assign mobile_heading_size = heading_size
                  endif
                  
                  if mobile_alignment == 'same_as_desktop'
                    assign mobile_alignment = alignment
                  endif

                  # Color settings
                  assign heading_color = block.settings.heading_color
                  assign text_color = block.settings.text_color
                  assign bg_color = block.settings.background
                -%}
                
                {% comment %} Block specific CSS {% endcomment %}
                <style>
                  #block-{{ block.id }} .image-with-text__heading {
                    {% if block.settings.heading_color != "rgba(0,0,0,0)" %}color: {{ block.settings.heading_color }} !important;{% endif %}
                    {% if block.settings.heading_font_size %}font-size: {{ block.settings.heading_font_size }}px !important;{% endif %}
                    {% if block.settings.heading_font_weight %}font-weight: {{ block.settings.heading_font_weight }} !important;{% endif %}
                    line-height: 1.2;
                  }
                  
                  @media only screen and (max-width: 798px) {
                    #block-{{ block.id }} .image-with-text__heading {
                      {% if block.settings.mobile_heading_font_size %}font-size: {{ block.settings.mobile_heading_font_size }}px !important;{% endif %}
                    }
                  }
                  
                  #block-{{ block.id }} .image-with-text__text {
                    {% if block.settings.text_color != "rgba(0,0,0,0)" %}color: {{ block.settings.text_color }} !important;{% endif %}
                  }
                  
                  {% if block.settings.background != "rgba(0,0,0,0)" %}
                  #block-{{ block.id }} {
                    background-color: {{ block.settings.background }};
                    padding: 20px;
                  }
                  {% endif %}
                </style>
                
                <div id="block-{{ block.id }}" class="image-with-text__text-wrapper animate-on-scroll animate-left" {{ block.shopify_attributes }}>
                  {% if title != blank %}
                    <h2 class="image-with-text__heading text-align-{{ alignment }} is-{{ heading_size }} is-hidden-mobile-only">
                      {{ title }}
                    </h2>
                  {% endif %}
                  
                  {%- if mobile_title != blank or title != blank -%}
                    <h2 class="image-with-text__heading text-align-{{ mobile_alignment }} is-{{ mobile_heading_size }} is-hidden-desktop-only">
                      {%- if mobile_title != blank -%}
                        {{- mobile_title -}}
                      {%- else -%}
                        {{- title -}}
                      {%- endif -%}
                    </h2>
                  {%- endif -%}
                  
                  {% if text != blank %}
                    <div class="image-with-text__text text-align-{{ alignment }} content is-hidden-mobile-only">
                      {{ text }}
                    </div>
                  {% endif %}
                  
                  {%- if mobile_text != blank or text != blank -%}
                    <div class="image-with-text__text text-align-{{ mobile_alignment }} content is-hidden-desktop-only">
                      {%- if mobile_text != blank -%}
                        {{- mobile_text -}}
                      {%- else -%}
                        {{- text -}}
                      {%- endif -%}
                    </div>
                  {%- endif -%}
                  
                  {% comment %} ICONS SECTION {% endcomment %}
                  {% if block.settings.show_icons %}
                    <div class="icon-row">
                      {% for j in (1..4) %}
                        {% assign icon_image = 'icon_image_' | append: j %}
                        {% assign icon_text = 'icon_text_' | append: j %}
                        {% assign icon_link = 'icon_link_' | append: j %}
                        
                        {% if block.settings[icon_image] != blank %}
                          <div class="icon-item">
                            {% if block.settings[icon_link] != blank %}
                              <a href="{{ block.settings[icon_link] }}">
                            {% endif %}
                              <div class="icon-container">
                                {%
                                  render 'image-element',
                                  image: block.settings[icon_image],
                                  alt: block.settings[icon_text] | default: 'Icon',
                                  stretch_width: false,
                                  additional_classes: 'icon-image',
                                %}
                              </div>
                              {% if block.settings[icon_text] != blank %}
                                <span class="icon-text">{{ block.settings[icon_text] }}</span>
                              {% endif %}
                            {% if block.settings[icon_link] != blank %}
                              </a>
                            {% endif %}
                          </div>
                        {% endif %}
                      {% endfor %}
                    </div>
                  {% endif %}
                  
                  {% if block.settings.button_label != blank %}
                    <div class="image-with-text__button image-with-text__button--text-align-{{ alignment }} buttons">
                      {%
                        render 'button',
                        label: block.settings.button_label,
                        href: block.settings.link,
                        style: block.settings.button_style,
                        type: "link",
                      %}
                    </div>
                  {% endif %}
                </div>
                {% break %}
              {% endif %}
            {% endfor %}
          </div>

          <!-- Right Column (Image) -->
          <div class="tab-column tab-image">
            {% for block in section.blocks %}
              {% assign tab_number = block.settings.tab_number | default: 1 | plus: 0 %}
              {% if tab_number == i and block.type == 'image' %}
                {%- liquid
                  assign image = block.settings.image
                  assign mobile_image = block.settings.mobile_image
                  assign image_additional_wrapper_classes = ''
                  
                  if mobile_image != blank
                    assign image_additional_wrapper_classes = 'is-hidden-mobile-only'
                  endif
                -%}
                
                <div id="block-{{ block.id }}" class="image-with-text__image-wrapper animate-on-scroll animate-right" {{ block.shopify_attributes }}>
                  {% if block.settings.image_link %}
                    <a href="{{ block.settings.image_link }}">
                  {% endif %}
                    {% if image != blank %}
                      {%
                        render 'image-element',
                        image: image,
                        alt: image.alt,
                        stretch_width: true,
                        additional_classes: 'image-with-text__image',
                        additional_wrapper_classes: image_additional_wrapper_classes,
                        focal_point: image.presentation.focal_point,
                      %}
                    {% else %}
                      {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                    {% endif %}
                    
                    {%- if mobile_image != blank -%}
                      {%
                        render 'image-element',
                        image: mobile_image,
                        alt: mobile_image.alt,
                        stretch_width: true,
                        additional_classes: 'image-with-text__image',
                        additional_wrapper_classes: 'is-hidden-desktop-only',
                        focal_point: mobile_image.presentation.focal_point,
                      %}
                    {%- endif -%}
                  {% if block.settings.image_link %}
                    </a>
                  {% endif %}
                </div>
                {% break %}
              {% endif %}
            {% endfor %}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</section>

{% comment %} JavaScript for tab functionality {% endcomment %}
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const tabButtons = document.querySelectorAll('.tab-button');
    const tabContents = document.querySelectorAll('.tab-content');
    
    tabButtons.forEach(button => {
      button.addEventListener('click', function() {
        const tabIndex = this.getAttribute('data-tab');
        
        // Remove active class from all buttons and contents
        tabButtons.forEach(btn => btn.classList.remove('active'));
        tabContents.forEach(content => content.classList.remove('active'));
        
        // Add active class to clicked button and corresponding content
        this.classList.add('active');
        document.querySelector(`[data-tab-content="${tabIndex}"]`).classList.add('active');
      });
    });
  });
</script>

