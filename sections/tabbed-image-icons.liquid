/**
 * Tabbed Content Section
 * Controls layout, tabs, responsiveness and content display
 */

/* -----------------------------
 * 1. Section Base Styles
 * ----------------------------- */
#shopify-section-{{ section.id }} {
  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
  {% if section.settings.width == 'wide' %}
    width: 100%;
  {% endif %}
}

/* -----------------------------
 * 2. Layout Structure
 * ----------------------------- */
#shopify-section-{{ section.id }} .tab-content {
  width: 100%;
}

#shopify-section-{{ section.id }} .tab-row {
  display: flex;
  flex-wrap: nowrap;
  width: 100%;
}

#shopify-section-{{ section.id }} .tab-column {
  width: 50%;
  flex: 0 0 50%;
  padding: 0 15px;
}

/* -----------------------------
 * 3. Tabs Navigation
 * ----------------------------- */
.tabs-container {
  margin-bottom: 30px;
}

.tabs-nav {
  display: flex;
  flex-wrap: wrap;
  list-style: none;
  padding: 0;
  margin: 0 0 20px 0;
  border-bottom: 1px solid #e8e8e8;
}

.tab-button {
  padding: 12px 24px;
  margin-right: 5px;
  margin-bottom: -1px;
  font-weight: 500;
  cursor: pointer;
  background: transparent;
  border: 1px solid transparent;
  border-bottom: none;
  transition: all 0.3s ease;
  font-size: 30px;
  color: #7B6154;
}

.tab-button.active {
  background: #249FB0;
  border-color: #e8e8e8;
  border-bottom: 2px solid #fff;
  position: relative;
  z-index: 1;
  color: #ffffff;
  border-radius: 20px;
}

.tab-button:hover:not(.active) {
  background: rgba(0,0,0,0.02);
}

.tab-content {
  display: none;
}

.tab-content.active {
  display: block;
}

/* -----------------------------
 * 4. Image Settings
 * ----------------------------- */
#shopify-section-{{ section.id }} .image-with-text__image-column .image-element__wrap {
  max-height: {{ section.settings.image_max_height }}px;
  overflow: visible;
  display: flex;
  align-items: center;
  justify-content: center;
}

#shopify-section-{{ section.id }} .image-with-text__image {
  object-fit: {{ section.settings.image_fit }};
  width: auto;
  max-width: 100%;
  max-height: {{ section.settings.image_max_height }}px;
}

#shopify-section-{{ section.id }} .image-with-text__image-column .image-element__wrap img[style*="object-fit: contain"] {
  width: auto !important;
  height: auto !important;
  max-height: {{ section.settings.image_max_height }}px !important;
  max-width: 100% !important;
}

/* -----------------------------
 * 5. Text Styling
 * ----------------------------- */
#shopify-section-{{ section.id }} .tab-text .image-with-text__heading {
  color: var(--heading-color, {{ settings.heading_color }});
}

#shopify-section-{{ section.id }} .tab-text .image-with-text__text {
  color: var(--text-color, {{ settings.regular_color }});
}

/* -----------------------------
 * 6. Icon Styles
 * ----------------------------- */
/* Icon row layout */
.icon-row {
  display: flex;
  flex-wrap: wrap;
  justify-content: left;
  margin-top: 20px;
}

.icon-item {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin: 0;
  text-align: center;
  width: calc(25% - 20px);
}

.icon-container {
  width: {{ section.settings.icon_size }}px;
  height: 70px;
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  margin-bottom: 10px;
}

.icon-image {
  max-width: 100%;
  max-height: 100%;
  object-fit: contain;
}

.icon-text {
  font-size: 14px;
  color: #000000;
}

/* -----------------------------
 * 7. Responsive Styles
 * ----------------------------- */
@media only screen and (max-width: 798px) {
  /* Section padding */
  #shopify-section-{{ section.id }} {
    padding-top: {{ section.settings.mobile_padding_top }}px;
    padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
  }

  /* Layout for mobile */
  #shopify-section-{{ section.id }} .tab-row {
    flex-wrap: wrap;
  }
  
  #shopify-section-{{ section.id }} .tab-column {
    width: 100%;
    flex: 0 0 100%;
  }

  /* Mobile image sizes */
  #shopify-section-{{ section.id }} .image-with-text__image-column .image-element__wrap {
    max-height: {{ section.settings.mobile_image_max_height }}px;
  }
  
  #shopify-section-{{ section.id }} .image-with-text__image {
    max-height: {{ section.settings.mobile_image_max_height }}px;
  }

  /* Mobile icon adjustments */
  .icon-container {
    width: {{ section.settings.mobile_icon_size }}px;
    height: {{ section.settings.mobile_icon_size }}px;
  }
  
  .icon-text {
    font-size: 12px;
  }
  
  .icon-item {
    width: calc(50% - 20px);
  }

  .icon-container .image-element__wrap {
    width: 120px;
  }

  /* Mobile tab navigation */
  .tabs-nav {
    flex-direction: column;
    border-bottom: none;
  }

  .tab-button {
    margin-bottom: 5px;
    border: 1px solid #e8e8e8;
    text-align: center;
    font-size: 20px;
    border-radius: 20px;
  }

  .tab-button.active {
    border-bottom: 1px solid #e8e8e8;
  }
}

