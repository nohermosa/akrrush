{%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
  
    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
  
    #section-{{ section.id }} .testimonial-heading {
      margin-bottom: {{ section.settings.heading_spacing }}px;
      color: {{ section.settings.heading_color }};
      font-size: {{ section.settings.heading_size }}px;
      text-align: center;
    }
    
    #section-{{ section.id }} .testimonial-slider {
      position: relative;
      width: 100%;
      overflow: hidden;
    }
    
    #section-{{ section.id }} .testimonial-track {
      display: flex;
      transition: transform 0.5s ease;
    }
    
    #section-{{ section.id }} .testimonial-item {
      flex: 0 0 calc(100% / {{ section.settings.slides_per_view }});
      max-width: calc(100% / {{ section.settings.slides_per_view }});
      padding: 0 10px;
      box-sizing: border-box;
    }
    
    #section-{{ section.id }} .testimonial-content-wrapper {
      height: 100%;
    }
    
    #section-{{ section.id }} .testimonial-stars {
      display: flex;
      justify-content: {{ section.settings.stars_alignment }};
      margin-bottom: 10px;
    }
    
    #section-{{ section.id }} .star-icon {
      fill: {{ section.settings.star_color }};
      width: 20px;
      height: 20px;
      margin-right: 2px;
    }
    
    #section-{{ section.id }} .slider-controls {
      display: flex;
      justify-content: center;
      margin-top: 20px;
    }
    
    #section-{{ section.id }} .slider-arrow {
      background: white;
      border: 1px solid #ddd;
      border-radius: 50%;
      width: 40px;
      height: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      margin: 0 5px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }
    
    #section-{{ section.id }} .slider-arrow:hover {
      background: #f5f5f5;
    }
    
    #section-{{ section.id }} .slider-dots {
      display: flex;
      justify-content: center;
      margin-top: 15px;
    }
    
    #section-{{ section.id }} .slider-dot {
      width: 10px;
      height: 10px;
      border-radius: 50%;
      background: #ddd;
      margin: 0 5px;
      cursor: pointer;
    }
    
    #section-{{ section.id }} .slider-dot.active {
      background: #666;
    }
    
    @media screen and (max-width: 749px) {
      #section-{{ section.id }} .testimonial-item {
        flex: 0 0 100%;
        max-width: 100%;
      }
      
      #section-{{ section.id }} .testimonial-heading {
        margin-bottom: {{ section.settings.heading_spacing_mobile }}px;
      }
    }
    
    {% for block in section.blocks %}
      #testimonial-{{ block.id }} {
        background-color: {{ block.settings.background_color }};
        color: {{ block.settings.text_color }};
        border-radius: {{ block.settings.border_radius }}px;
        padding: {{ block.settings.padding }}px;
        text-align: {{ block.settings.text_alignment }};
        display: flex;
        flex-direction: column;
        justify-content: {{ block.settings.vertical_alignment }};
        height: 100%;
      }
      
      #testimonial-{{ block.id }} .testimonial-content {
        font-size: {{ block.settings.font_size }}px;
      }
      
      #testimonial-{{ block.id }} .testimonial-content p {
        color: {{ block.settings.text_color }};
      }
    {% endfor %}
  {%- endstyle -%}
  
  <div class="testimonial-section page-width section-{{ section.id }}-padding" id="section-{{ section.id }}">
    {%- if section.settings.heading != blank -%}
      <h2 class="testimonial-heading">{{ section.settings.heading }}</h2>
    {%- endif -%}
    
    <div class="testimonial-slider" data-slides="{{ section.settings.slides_per_view }}">
      <div class="testimonial-track">
        {%- for block in section.blocks -%}
          <div class="testimonial-item" {{ block.shopify_attributes }}>
            <div class="testimonial-content-wrapper" id="testimonial-{{ block.id }}">
              <div class="testimonial-stars">
                {%- assign star_count = block.settings.star_count | plus: 0 -%}
                {%- for i in (1..star_count) -%}
                  <svg class="star-icon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path d="M12 17.27L18.18 21L16.54 13.97L22 9.24L14.81 8.63L12 2L9.19 8.63L2 9.24L7.46 13.97L5.82 21L12 17.27Z"/>
                  </svg>
                {%- endfor -%}
              </div>
              <div class="testimonial-content">
                {{ block.settings.quote }}
              </div>
            </div>
          </div>
        {%- endfor -%}
      </div>
      
      <div class="slider-controls">
        <div class="slider-arrow prev-arrow">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M15 18L9 12L15 6" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        <div class="slider-arrow next-arrow">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M9 18L15 12L9 6" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
      </div>
      
      <div class="slider-dots"></div>
    </div>
  </div>
  
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const sliders = document.querySelectorAll('.testimonial-slider');
      
      sliders.forEach(function(slider) {
        const track = slider.querySelector('.testimonial-track');
        const items = slider.querySelectorAll('.testimonial-item');
        const prevArrow = slider.querySelector('.prev-arrow');
        const nextArrow = slider.querySelector('.next-arrow');
        const dotsContainer = slider.querySelector('.slider-dots');
        
        let currentIndex = 0;
        const slidesPerView = parseInt(slider.dataset.slides) || 3;
        const totalSlides = items.length;
        const slidesToScroll = 1;
        const totalDots = Math.ceil((totalSlides - slidesPerView + 1) / slidesToScroll);
        
        // Create dots
        for (let i = 0; i < totalDots; i++) {
          const dot = document.createElement('div');
          dot.classList.add('slider-dot');
          if (i === 0) dot.classList.add('active');
          dot.dataset.index = i;
          dotsContainer.appendChild(dot);
          
          dot.addEventListener('click', function() {
            goToSlide(parseInt(this.dataset.index));
          });
        }
        
        const dots = slider.querySelectorAll('.slider-dot');
        
        function updateSliderPosition() {
          const slideWidth = items[0].offsetWidth;
          track.style.transform = `translateX(-${currentIndex * slideWidth}px)`;
          
          // Update active dot
          const activeDotIndex = Math.floor(currentIndex / slidesToScroll);
          dots.forEach((dot, index) => {
            dot.classList.toggle('active', index === activeDotIndex);
          });
        }
        
        function goToSlide(index) {
          currentIndex = index * slidesToScroll;
          if (currentIndex > totalSlides - slidesPerView) {
            currentIndex = totalSlides - slidesPerView;
          }
          updateSliderPosition();
        }
        
        function nextSlide() {
          if (currentIndex < totalSlides - slidesPerView) {
            currentIndex += slidesToScroll;
            updateSliderPosition();
          } else if ({{ section.settings.infinite_scroll | json }}) {
            currentIndex = 0;
            updateSliderPosition();
          }
        }
        
        function prevSlide() {
          if (currentIndex > 0) {
            currentIndex -= slidesToScroll;
            updateSliderPosition();
          } else if ({{ section.settings.infinite_scroll | json }}) {
            currentIndex = totalSlides - slidesPerView;
            updateSliderPosition();
          }
        }
        
        // Event listeners
        nextArrow.addEventListener('click', nextSlide);
        prevArrow.addEventListener('click', prevSlide);
        
        // Auto rotation
        if ({{ section.settings.enable_auto_scroll | json }}) {
          const interval = setInterval(function() {
            nextSlide();
          }, {{ section.settings.scroll_speed | times: 1000 }});
          
          slider.addEventListener('mouseenter', function() {
            clearInterval(interval);
          });
          
          slider.addEventListener('mouseleave', function() {
            if ({{ section.settings.enable_auto_scroll | json }}) {
              setInterval(function() {
                nextSlide();
              }, {{ section.settings.scroll_speed | times: 1000 }});
            }
          });
        }
        
        // Responsive handling
        function handleResize() {
          updateSliderPosition();
        }
        
        window.addEventListener('resize', handleResize);
        
        // Initialize slider position
        updateSliderPosition();
      });
    });
  </script>
  
